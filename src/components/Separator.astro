---
/** Separator: orientation 'horizontal' | 'vertical' (default horizontal) */
interface Props {
	orientation?: "horizontal" | "vertical";
	label?: string;
}
const { orientation = "horizontal", label } = Astro.props as Props;
---

{
	orientation === "vertical" ? (
		<div
			class="sep-vertical"
			role="separator"
			aria-orientation="vertical"
			aria-label={label}
		/>
	) : (
		<div class="divider-double" role="separator" aria-orientation="horizontal">
			<span />
			<span />
			{label && <span class="sr-only">{label}</span>}
		</div>
	)
}
<style is:inline>
	.sep-vertical {
		width: 6px;
		display: inline-flex;
		flex-direction: row;
		align-self: stretch;
		margin: 0 6px;
	}
	.sep-vertical::before,
	.sep-vertical::after {
		content: "";
		display: block;
		width: 1px;
		background: var(--border-dark);
		box-shadow: 1px 0 0 var(--border-light);
		margin: 0 1px;
	}
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}
</style>
